<Window x:Class="ApiConsumer.AddUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ApiConsumer"
        mc:Ignorable="d"
        Title="AddUserWindow" Height="450" Width="800">
    <Grid>

        <Label FontSize="40" Content="Add a new user" HorizontalAlignment="Left" Margin="30,21,0,0" VerticalAlignment="Top" Width="292"/>
        <Label Content="Username :" FontSize=" 20" HorizontalAlignment="Left" Margin="117,136,0,0" VerticalAlignment="Top" Width="119" Height="37"/>
        <Label Content="Age :" FontSize=" 20"  HorizontalAlignment="Left" Margin="117,238,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Height="39" Width="137"/>
        <TextBox x:Name="userNameInput" HorizontalAlignment="Left" Margin="302,136,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="196" Height="37"/>
        <TextBox x:Name="ageInput" HorizontalAlignment="Center"  TextWrapping="Wrap" VerticalAlignment="Top" Width="196" Height="38" Margin="0,239,0,0"/>
        <Button Click="AddNewUser" Content="Add" HorizontalAlignment="Left" Margin="596,180,0,0" VerticalAlignment="Top" Height="64" Width="87"/>

    </Grid>
</Window>
