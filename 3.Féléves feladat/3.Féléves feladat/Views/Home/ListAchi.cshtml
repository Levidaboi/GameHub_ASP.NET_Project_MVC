@using Models
@model IEnumerable<Achievement>

<!DOCTYPE html5>
<html>
<head>
    <title>Achievement Listing</title>
    <style>
    </style>
</head>

<body>
    <h1>Achievements</h1><br />

    <table class="table">
        <thead>
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.achiLevel)
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.achiLevel)
                    </td>

                    <td>

                        <a href="/Home/DeleteAchi?Id=@item.AchiId">Delete</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/Home/ListUsers">Back to the users</a>
    <br />
    
    <br />  
    <a href="/Home/Index">Back To Hub</a>
</body>
</html>

