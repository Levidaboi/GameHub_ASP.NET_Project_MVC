@using Models
@model IEnumerable<Achievement>

<!DOCTYPE html5>
<html>
<head>
    <title>Achievement Listing</title>
    <style>
    </style>
</head>

<body>
    <h1>Achievements</h1><br />

    <table class="table">
        <thead>
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.achiLevel)
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.achiLevel)
                    </td>

                    <td>

                        <input type="button" class="btn btn-warning" onclick="location.href='/Home/EditAchi?Id=@item.AchiId';" value="Edit" />
                        <br />
                        <input type="button" class="btn btn-warning" onclick="location.href='/Home/DeleteAchi?Id=@item.AchiId';" value="Delete" />
                        

                    </td>
                </tr>
             }
        </tbody>
    </table>
    <input type="button" class="btn btn-warning" onclick="location.href='/Home/ListUsers';" value="Back to the users" />

    <br />

    <br />
    
    <input type="button" class="btn btn-warning" onclick="location.href='/Home/Index';" value="Back To Hub" />
</body>
</html>

